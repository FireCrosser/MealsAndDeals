!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Meals And Deals
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = yield :head
  %body
    -#= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-default"
    = render "layouts/header"
    %div.container
      %div.row
        %div.alert.alert-dismissible.fade.in.col-md-7{ role: "alert" }
          %button.close{ type: "button", data: { dismiss: "alert" },
        aria: { label: "Close" }}
            %span{ aria: { hidden: "true" }} &times;
          %span.alert-content
      = yield
